{
  "name": "headless",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/kit-headless/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/kit-headless",
        "configFile": "packages/kit-headless/vite.config.ts",
        "mode": "lib"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/kit-headless/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "version-dry": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "dryRun": true,
        "trackDeps": true,
        "noVerify": true,
        "skipCommit": true
      }
    },

    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "releaseAs": "patch"
      }
    },
    "version-publish": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "noVerify": true,
        "push": true,
        "releaseAs": "patch",
        "postTargets": [
          "headless:build",
          "headless:update-utils-version",
          "headless:publish",
          "headless:push-to-github"
        ]
      }
    },

    "version-publish-minor": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "noVerify": true,
        "push": true,
        "releaseAs": "minor",
        "postTargets": [
          "headless:build",
          "headless:update-utils-version",
          "headless:publish",
          "headless:push-to-github"
        ]
      }
    },

    "update-utils-version": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "command": "pnpm update.version"
      }
    },

    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "noBuild": true,
        "access": "public"
      }
    },
    "push-to-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}",
        "title": "@qwik-ui/headless@${version}"
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/kit-headless/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "uiFramework": "@storybook/html",
        "configDir": "packages/kit-headless/.storybook",
        "outputDir": "dist/storybook/kit-headless"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm test-storybook --url http://localhost:4400 --coverage",
        "cwd": "packages/kit-headless"
      }
    },
    "component-test": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "packages/kit-headless/cypress.config.ts",
        "testingType": "component",
        "watch": true,
        "skipNxCache": true,
        "env": {
          "pluginVisualRegressionCleanupUnusedImages": false
        }
      }
    },
    "component-test-ci": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "packages/kit-headless/cypress.config.ts",
        "testingType": "component",
        "env": {
          "pluginVisualRegressionCleanupUnusedImages": false
        }
      }
    }
  },
  "tags": []
}
