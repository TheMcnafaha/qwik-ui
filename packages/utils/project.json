{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/utils"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/utils"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/utils"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/utils/**/*.ts"]
      }
    },
    "version-dry": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "dryRun": true,
        "trackDeps": true,
        "noVerify": true,
        "skipCommit": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "releaseAs": "patch"
      }
    },
    "version-publish": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "noVerify": true,
        "push": true,
        "releaseAs": "patch",
        "postTargets": ["utils:build", "utils:publish", "utils:push-to-github"]
      }
    },

    "version-publish-minor": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "noVerify": true,
        "push": true,
        "releaseAs": "minor",
        "postTargets": ["utils:build", "utils:publish", "utils:push-to-github"]
      }
    },

    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "noBuild": true,
        "access": "public"
      }
    },
    "push-to-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}",
        "title": "@qwik-ui/utils@${version}"
      }
    }
  },
  "tags": []
}
